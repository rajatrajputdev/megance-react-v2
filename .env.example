# Razorpay public key for frontend (safe to expose)
VITE_RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxxxx

# Never put your Razorpay key_secret in the frontend.
# Use it only on your server to create orders and verify signatures.

# Firebase (public) config for frontend auth
VITE_FIREBASE_API_KEY=your_api_key
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=000000000000
VITE_FIREBASE_APP_ID=1:000000000000:web:xxxxxxxxxxxxxxxx

# Google Analytics 4 (optional)
# Example: G-XXXXXXXXXX
VITE_GA_MEASUREMENT_ID=

# Server Functions base URL (required for server-side profile updates)
# Example (production): https://asia-south2-your_project_id.cloudfunctions.net
# Example (emulator): http://127.0.0.1:5001/your_project_id/asia-south2
# Optional: Only needed if not using callable
VITE_FUNCTIONS_BASE_URL=https://asia-south2-megance-8fc33.cloudfunctions.net

# Optional: Region for callable functions
# e.g. asia-south2 or us-central1
VITE_FUNCTIONS_REGION=asia-south2

# Supabase (for returns/refund images)
# Public URL of your Supabase project and anon key.
# Bucket defaults to `refund-requests` if not set.
VITE_SUPABASE_URL=
VITE_SUPABASE_ANON_KEY=
VITE_SUPABASE_BUCKET=refund-requests

# Function toggles (server)
# Leave blank/false in dev; set true only when configured
# EMAIL_ENABLED=true
# RAZORPAY_ENABLED=false
# IDENTITY_ENABLED=false

# reCAPTCHA behavior for web phone auth
# If true, the app may show a visible reCAPTCHA challenge on OTP errors.
# Keep this false to avoid showing any captcha UI; OTP may fail in suspicious environments.
VITE_ALLOW_VISIBLE_RECAPTCHA=false
